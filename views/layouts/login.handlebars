    <script>
        window.sr = ScrollReveal();
        sr.reveal('h1', {
            duration: 1000,
            origin: 'top',
            distance: '300px',
        });

        sr.reveal('p', {
            duration: 1000,
            origin: 'left',
            distance: '300px',
        });

        sr.reveal('.btn', {
            duration: 1000,
            delay: 1000,
            origin: 'left'
        });

        sr.reveal('.google-btn', {
            duration: 1000,
            delay: 1000,
            origin: 'right'
        });

        sr.reveal('.facebook-btn', {
            duration: 1000,
            delay: 1000,
            origin: 'right'
        });

    </script>

